<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_med"
        android:layout_marginStart="@dimen/spacing_med"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingTop="@dimen/spacing_med"
            android:text="@string/starships_title"
            android:textSize="@dimen/font_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:maxLines="1"
            android:paddingStart="@dimen/spacing_med"
            android:paddingTop="@dimen/spacing_small"
            android:text="@string/cost"
            android:textSize="@dimen/font_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/films"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_med"
        android:layout_marginStart="@dimen/spacing_med"
        android:paddingBottom="@dimen/spacing_med"
        android:text="@string/films"
        android:textSize="@dimen/font_mid" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:paddingTop="@dimen/spacing_med" />
</LinearLayout>